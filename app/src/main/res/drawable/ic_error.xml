    <!-- Small mountain icon broken -->
    <path
        android:fillColor="#B0B0B0"
        android:pathData="M75,165 L85,155 L95,162 L95,175 L75,175 Z"/>

    <path
        android:fillColor="#B0B0B0"
        android:pathData="M105,170 L115,160 L125,165 L125,175 L105,175 Z"/>

