        android:fillColor="#B0B0B0"
        android:pathData="M70,140 h60 v40 h-60 z"/>

    <path
        android:fillColor="#FFEBEE"
        android:pathData="M75,145 h50 v30 h-50 z"/>

    <!-- Diagonal crack line -->
