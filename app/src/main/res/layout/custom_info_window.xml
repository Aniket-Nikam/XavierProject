<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/info_window_background"
    android:minWidth="280dp">

    <!-- Title -->
    <TextView
        android:id="@+id/infoWindowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Category and Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/infoWindowCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Category"
            android:textSize="12sp"
            android:textColor="#666666"
            android:background="#F5F5F5"
            android:padding="4dp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/infoWindowStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Image -->
    <ImageView
        android:id="@+id/infoWindowImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="Report Image"
        android:background="#E0E0E0" />

    <!-- Description -->
    <TextView
        android:id="@+id/infoWindowDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textSize="13sp"
        android:textColor="#555555"
        android:maxLines="3"
        android:ellipsize="end" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/infoWindowTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Jan 15, 2026"
        android:textSize="11sp"
        android:textColor="#888888"
        android:gravity="end" />

    <!-- Tap instruction -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Double-tap for details"
        android:textSize="10sp"
        android:textColor="#2196F3"
        android:textStyle="italic"
        android:gravity="center" />

</LinearLayout>