<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Complaint Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/detailImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/surface"
                android:contentDescription="Complaint Image" />

            <ProgressBar
                android:id="@+id/imageProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Category Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/detailCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@android:color/white"
            app:chipBackgroundColor="@color/primary"
            android:layout_marginBottom="8dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/detailTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Title"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- User Email -->
        <TextView
            android:id="@+id/detailUserEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User: user@example.com"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:drawablePadding="6dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Description Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/detailDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description of the complaint"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Location Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/detailLocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location details"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:drawableStart="@android:drawable/ic_dialog_map"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnViewOnMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View on Map"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/primary"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Update Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Status"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a status to update and notify the user via email:"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <!-- Status Buttons Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnPending"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pending"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="4dp"
                        app:backgroundTint="@color/button_default"
                        style="@style/Widget.Material3.Button" />

                    <Button
                        android:id="@+id/btnAcknowledged"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Acknowledged"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="4dp"
                        app:backgroundTint="@color/button_default"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

                <!-- Status Buttons Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnOngoing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ongoing"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="4dp"
                        app:backgroundTint="@color/button_default"
                        style="@style/Widget.Material3.Button" />

                    <Button
                        android:id="@+id/btnResolved"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Resolved"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="4dp"
                        app:backgroundTint="@color/button_default"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>