<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/filterScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/surface"
        android:elevation="2dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:singleSelection="true"
            app:singleLine="true" />

    </HorizontalScrollView>

    <!-- Posts RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filterScrollView"
        android:layout_above="@id/quickInputCard"
        android:paddingTop="12dp"
        android:clipToPadding="false"
        android:visibility="gone" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No posts yet. Be the first to start a discussion!"
        android:textColor="@color/text_secondary"
        android:textSize="15sp"
        android:textAlignment="center"
        android:padding="24dp"
        android:visibility="gone" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/primary" />

    <!-- Quick Input Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/quickInputCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/newPostEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Start a discussion..."
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textCapSentences" />

            <ImageButton
                android:id="@+id/sendPostButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Create Post"
                app:tint="@color/primary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>